<Window x:Class="MatchRedux.Progress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" Content="Clear" Width="70" Height="24" Click="Button_Click" />
            <Button Margin="5" Content="Cancel" Width="70" Height="24" Click="Button_Click_1" />
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <TextBox x:Name="textBox"/>
        </ScrollViewer>
    </Grid>
</Window>
